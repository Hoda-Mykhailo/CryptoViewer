<Page x:Class="CryptoViewer.View.MainView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="MainView">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- SEARCH -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <TextBox x:Name="SearchBox"
                     Height="32"
                     FontSize="14"
                     VerticalContentAlignment="Center"
                     Text="{Binding Search, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Text="Search currency..."
                       Margin="8,0,0,0"
                       Foreground="Gray"
                       IsHitTestVisible="False"
                       VerticalAlignment="Center">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Text, ElementName=SearchBox}"
                                         Value="">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </Grid>

        <!-- LIST -->
        <ListView Grid.Row="1"
                  ItemsSource="{Binding Currencies}"
                  SelectedItem="{Binding SelectedCurrency}"
                  MouseDoubleClick="OpenDetails"
                  BorderThickness="0">

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Padding="10"
                            Margin="0,0,0,8"
                            Background="#F2F2F2"
                            CornerRadius="6">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="{Binding Name}"
                                       FontWeight="SemiBold"/>

                            <TextBlock Grid.Column="1"
                                       Text="{Binding Price}"
                                       HorizontalAlignment="Right"/>

                            <TextBlock Grid.Column="2"
                                       Text="{Binding Change24h}"
                                       HorizontalAlignment="Right"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        

        <!-- SELECTED INFO -->
        <Border Grid.Row="2"
                Margin="0,10,0,0"
                Padding="10"
                Background="#E8F0FE"
                CornerRadius="6">

            <StackPanel>
                <TextBlock Text="Selected currency:" FontWeight="Bold"/>
                <TextBlock Text="{Binding SelectedCurrency.Name}"/>
                <TextBlock Text="{Binding SelectedCurrency.Symbol}"/>
                <TextBlock Text="{Binding SelectedCurrency.Price}"/>
            </StackPanel>

        </Border>

    </Grid>
</Page>
